<Window x:Class="SimpleBudget.AccountsManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleBudget"
        mc:Ignorable="d"
        Title="Accounts" Height="300" Width="300">
    <DockPanel>
        <DockPanel DockPanel.Dock="Right">
            <ComboBox DockPanel.Dock="Top" ItemsSource="{Binding AccTypes}"/>
            <CheckBox></CheckBox>
            <Label></Label>
            <CheckBox></CheckBox>
            <Label></Label>
            <TextBlock x:Name="AccName" Width="100"/>
            <Button Content="New Account" Click="AddButton_Click"/>
        </DockPanel>
        <ListBox DockPanel.Dock="Left"
                 ItemsSource="{Binding Accounts}"
                 SelectionMode="Single">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Delete Account" Click="DeleteAccount_Click"/>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
